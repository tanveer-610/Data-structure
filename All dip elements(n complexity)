#include<stdio.h>
main()
{
    int arr[100],n;
    printf("Enter array size:");
    scanf("%d",&n);
    printf("Enter array elements:");
    for(int i=0; i<n; i++)
        scanf("%d",&arr[i]);
    printf("\n\n\t");
    for(int i=0; i<n; i++)
    {
        if(i==0)
        {
            if(arr[i+1]>arr[i])
            {
                printf("%d ",arr[i]);
            }
        }
        else if(i==n-1)
        {
            if(arr[i]<arr[i-1])
            {
                printf("%d ",arr[i]);
            }
        }
        else if(arr[i-1]>arr[i] && arr[i]<arr[i+1])
            printf("%d ",arr[i]);
    }

}
